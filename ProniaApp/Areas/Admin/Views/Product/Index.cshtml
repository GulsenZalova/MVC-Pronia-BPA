@using ProniaApp.Admin.ViewModels
@model List<GetProductVM>
@{
    int count=0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <a asp-action="create" class="btn btn-success">Add Product</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                   Name
                                </th>
                                <th>
                                   Price
                                </th>
                                 <th>
                                   CategoryName
                                </th>
                                <th>
                                   Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (GetProductVM getProductVM in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                       @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@getProductVM.Image" alt="">
                                    </td>
                                    <td>
                                       @getProductVM.Name
                                    </td>
                                    <td>
                                       @getProductVM.Price
                                    </td>
                                     <td>
                                       @getProductVM.CategoryName
                                    </td>
                                    <td>
                                    <a asp-action="update" asp-route-id="@getProductVM.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="delete" asp-route-id="@getProductVM.Id" class="btn btn-danger">Delete</a>
                                    <a class="btn btn-primary">Detail</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>